<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvAeropuertoId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="Aeropuerto ID: 1"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#3F51B5"/> <TextView
            android:id="@+id/tvAeropuertoPaisId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="País ID: 1 (Perú)"
            android:textSize="14sp"
            android:textColor="#666666"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvAeropuertoNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Jorge Chávez - Lima"
            android:textSize="18sp"
            android:textStyle="italic"
            android:textColor="#000000"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tvPlaceholder1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubicación Global"
            android:textSize="14sp"
            android:textColor="#999999"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvPlaceholder2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Capacidad de Operaciones"
            android:textSize="14sp"
            android:textColor="#999999"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnEditAeropuerto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar"
                android:textSize="12sp"
                android:backgroundTint="#FF9800"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnDeleteAeropuerto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eliminar"
                android:textSize="12sp"
                android:backgroundTint="#F44336"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>