<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDialogTitleAsiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar Asiento"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="16dp"/>

        <!-- Spinner de Vuelos -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vuelo"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="4dp"/>

        <Spinner
            android:id="@+id/spinnerVuelosAsiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Campo de Fila -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Número de Fila"
            android:layout_marginBottom="12dp"
            app:boxBackgroundMode="outline"
            app:startIconDrawable="@android:drawable/ic_menu_sort_by_size">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etFilaAsiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Spinner de Estado -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado del Asiento"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="4dp"/>

        <Spinner
            android:id="@+id/spinnerEstadoAsiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Campo de ID Reserva (Opcional) -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID Reserva (Opcional - dejar vacío si no aplica)"
            android:layout_marginBottom="16dp"
            app:boxBackgroundMode="outline"
            app:startIconDrawable="@android:drawable/ic_menu_agenda"
            app:helperText="Solo si el asiento está reservado"
            app:helperTextEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etIdReservaAsiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnCancelarAsiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelar"
                android:textSize="14sp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnGuardarAsiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardar"
                android:textSize="14sp"
                android:backgroundTint="#4CAF50"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>