<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvAsientoId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="Asiento ID: 15"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#4CAF50"/> <TextView
            android:id="@+id/tvAsientoEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Disponible"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#666666"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvAsientoVuelo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Vuelo ID: 1024"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvAsientoFila"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Fila: 12"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvAsientoReserva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Reserva ID: 55"
            android:textSize="14sp"
            android:textColor="#9E9E9E"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnEditAsiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar"
                android:textSize="12sp"
                android:backgroundTint="#FF9800"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnDeleteAsiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eliminar"
                android:textSize="12sp"
                android:backgroundTint="#F44336"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>